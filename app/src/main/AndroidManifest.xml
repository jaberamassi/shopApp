<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jaber.shopapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopApp">
        <activity
            android:name=".activites.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopApp.noActionBar" />

        <activity
            android:name=".activites.LoginActivity"
            android:theme="@style/Theme.ShopApp.noActionBar" />

        <activity
            android:name=".activites.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopApp.noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activites.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ShopApp.noActionBar" />

        <activity android:name=".activites.BaseActivity" />

        <activity
            android:name=".activites.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>